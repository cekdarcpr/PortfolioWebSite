@using KisiselWeb.Concrete;
@model List<Contact>

@{
    ViewData["Title"] = "Contact";
}

<section id="contact" class="paralax-mf footer-paralax bg-image sect-mt4 route" style="background-image: url(/DevFolio/assets/img/overlay-bg.jpg)">
    <div class="overlay-mf"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="contact-mf">
                    <div id="contact" class="box-shadow-full">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="title-box-2">
                                    <h5 class="title-left">
                                        Bana Mesaj Gönder
                                    </h5>
                                </div>
                                <div>
                                    <form action="forms/contact.php" method="post" role="form" class="php-email-form">
                                        <div class="row">
                                            <div class="col-md-12 mb-3">
                                                <div class="form-group">
                                                    <input type="text" name="name" class="form-control" id="name" placeholder="Ad Soyad" required>
                                                </div>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <div class="form-group">
                                                    <input type="email" class="form-control" name="email" id="email" placeholder="Email" required>
                                                </div>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" name="subject" id="subject" placeholder="Konu" required>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <textarea class="form-control" name="message" rows="5" placeholder="Mesaj" required></textarea>
                                                </div>
                                            </div>
                                            <div class="col-md-12 text-center my-3">
                                                <div class="loading">Loading</div>
                                                <div class="error-message"></div>
                                                <div class="sent-message">Bana Mesaj Gönderdiğin için Teşekkürler!</div>
                                            </div>
                                            <div class="col-md-12 text-center">
                                                <button type="submit" class="button button-a button-big button-rouded">Mesaj Gönder</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="title-box-2 pt-4 pt-md-0">
                                    <h5 class="title-left">
                                        Görüşmek için
                                    </h5>
                                </div>
                                <div class="more-info">
                                    <p class="lead">
                                        Yerel adresim ve iletişim bilgilerim altta bulunmaktadır. Dilediğiniz zaman iletişime geçe bilirsiniz...
                                    </p>
                                    <ul class="list-ico">
                                        <li><span class="bi bi-geo-alt"></span> 329 WASHINGTON ST BOSTON, MA 02108</li>
                                        <li><span class="bi bi-phone"></span> (617) 557-0089</li>
                                        <li><span class="bi bi-envelope"></span> contact@example.com</li>
                                    </ul>
                                </div>
                                <div class="socials">
                                    <ul>
                                        <li><a href="https://github.com/cekdarcpr"><span class="ico-circle"><i class="bi bi-github"></i></span></a></li>
                                        <li><a href="https://instagram.com/cekdarcpr"><span class="ico-circle"><i class="bi bi-instagram"></i></span></a></li>
                                        <li><a href="https://twitter.com/cekdarcpr"><span class="ico-circle"><i class="bi bi-twitter"></i></span></a></li>
                                        <li><a href="https://www.linkedin.com/in/cekdarcapar/"><span class="ico-circle"><i class="bi bi-linkedin"></i></span></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

